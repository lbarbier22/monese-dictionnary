<div class="main-container">
    <div class="carte">
    <div class="heart-favoris" id="toggleFavori" data-mot="<%= mot.Mot %>" title="Ajouter/Retirer des favoris">
        <span id="favoriIcon">ğŸ¤</span>
    </div>
    <div class="mot"><%= mot.Mot.charAt(0).toUpperCase() + mot.Mot.slice(1) %> <span style="color: royalblue"><%= 'â˜…'.repeat(mot.DifficultÃ©) %></span></div>
    <div class="type"><%= mot.Type %></div>
